<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="at.fhtw.view.TourListController"
            fx:id="tourListController">

    <VBox maxHeight="Infinity">
        <HBox maxWidth="Infinity">
            <Button onMouseClicked="#tourAddClicked" text="Add" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <Button onMouseClicked="#tourDeleteClicked" text="Delete" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        </HBox>

        <ListView fx:id="tourListView"/>
    </VBox>

</AnchorPane>
