<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="at.fhtw.view.TourListController"
            fx:id="tourListController">

    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <HBox maxWidth="Infinity" maxHeight="Infinity">
            <Button onMouseClicked="#tourAddClicked" text="Add" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <Button onMouseClicked="#tourDeleteClicked" text="Delete" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        </HBox>

        <ListView fx:id="tourListView" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
    </VBox>

</AnchorPane>
