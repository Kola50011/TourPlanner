<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          prefWidth="1280.0" prefHeight="720.0"
          fx:controller="at.fhtw.view.IndexController" hgap="10" vgap="10">

    <columnConstraints>
        <ColumnConstraints percentWidth="20"/>
    </columnConstraints>

    <fx:include source="menu.fxml"
                fx:id="menu"
                GridPane.columnIndex="0" GridPane.rowIndex="0"
                GridPane.columnSpan="2" GridPane.rowSpan="1"/>

    <fx:include source="tourList.fxml" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                fx:id="tourList"
                GridPane.columnIndex="0" GridPane.rowIndex="1"
                GridPane.columnSpan="1" GridPane.rowSpan="1"/>

    <fx:include source="tourDetail.fxml" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                fx:id="tourDetail"
                GridPane.columnIndex="1" GridPane.rowIndex="1"
                GridPane.columnSpan="1" GridPane.rowSpan="1"/>
</GridPane>
